{
    "name": "Inferno GPU DevContainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "VARIANT": "22.04"
        }
    },
    "runArgs": ["--gpus", "all"],
    "remoteUser": "root",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        }
    },
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools"
    ],
    "settings": {
        "python.pythonPath": "/usr/bin/python3"
    }
}

