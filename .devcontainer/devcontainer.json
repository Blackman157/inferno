{
    "name": "INFERNO 3D Face Reconstruction",
    "build": {
        "dockerfile": "../docker/work39_torch2/Dockerfile",
        "context": "..",
        "args": {
            "USER": "codespace",
            "USER_ID": "1000",
            "GROUP_ID": "1000"
        }
    },
    "runArgs": ["--gpus", "all"],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "portsAttributes": {
        "7860": {
            "label": "Gradio Interface",
            "onAutoForward": "openPreview"
        }
    },
    "postCreateCommand": "pip install gradio matplotlib Pillow opencv-python",
    "remoteUser": "codespace"
}
