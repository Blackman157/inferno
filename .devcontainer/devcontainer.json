{
  "name": "INFERNO Ubuntu 22.04",

  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },

  "runArgs": ["--gpus", "all"],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "postCreateCommand": "pip install --upgrade pip",

  "remoteUser": "codespace"
}
