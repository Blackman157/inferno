{
    "name": "Inferno (Emotion Recognition) Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    // Установка полезных расширений для работы с Python и NLP
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter" // Полезно для работы с данными и моделями NLP
            ]
        }
    },
    // Выполнение команд после создания контейнера (например, для загрузки моделей)
    "postCreateCommand": "echo 'Codespace is ready. Run your Python scripts now!'"
}
