{
  "name": "INFERNO Python 3.11",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "updateContentCommand": "pip install --upgrade pip && pip install -r requirements.txt",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "postAttachCommand": "echo 'Container ready.'",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
